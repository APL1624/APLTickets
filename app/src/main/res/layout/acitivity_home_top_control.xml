<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/color_white"
    tools:showIn="@layout/activity_home">

    <FrameLayout
        android:id="@+id/home_top_movie"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/home_top_movie_location"
            style="@style/home_movie_left_text"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:text="@string/activity_home_location" />

        <ImageView
            android:id="@+id/home_top_movie_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_main_search" />

        <CheckBox
            android:id="@+id/home_top_movie_list_mode"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="60dp"
            android:layout_gravity="right|center_vertical"
            android:button="@null"
            android:background="@drawable/home_top_list_mode_selector" />

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <CheckBox
                android:id="@+id/home_top_movie_hot"
                android:text="@string/home_movie_hot"
                style="@style/home_top_movie_title" />

            <CheckBox
                android:id="@+id/home_top_movie_preview"
                style="@style/home_top_movie_title"
                android:layout_gravity="right"
                android:text="@string/home_movie_preview" />

            <View
                android:id="@+id/home_top_movie_indicator"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@color/colorOrange" />

        </FrameLayout>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/home_top_cinema"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/home_top_cinema_location_text"
            style="@style/home_movie_left_text"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:text="@string/activity_home_location" />

        <ImageView
            android:id="@+id/home_top_cinema_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_main_search" />

        <ImageView
            android:id="@+id/home_top_cinema_location_image"
            style="@style/home_location_image"
            android:src="@mipmap/icon_main_location" />

        <TextView
            android:id="@+id/home_top_cinema_title"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="影院"
            android:textSize="18sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/home_top_found"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="发现"
        android:textSize="18sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/home_top_mine"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_white"
        android:visibility="gone">

        <TextView
            android:id="@+id/home_top_mine_service"
            style="@style/home_movie_left_text"
            android:text="客服" />

        <TextView
            android:id="@+id/home_top_mine_title"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="我的"
            android:textSize="18sp" />

    </FrameLayout>

</FrameLayout>