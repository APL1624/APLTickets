<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_movie_hot_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_alpha_9"
    android:clipChildren="false"
    android:layerType="software">

    <!--clipChildren 表示是否限制子view在其范围内,layout和viewPager都设置了,默认为true-->

    <android.support.v4.view.ViewPager
        android:id="@+id/home_movie_hot_viewPager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="5dp"
        android:clipChildren="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/home_movie_hot_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp"
            android:text="金刚"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/home_movie_hot_resurt"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="75dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/home_movie_hot_title"
            android:text="7.6"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/home_movie_hot_content"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="绝境崛起，大有不同"
            android:textColor="@color/color_gray_2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/home_movie_hot_btn"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/hot_item_buy_selector"
            android:gravity="center"
            android:text="选座购票"
            android:textColor="@color/color_white"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/home_movie_preview_look"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/hot_item_buy_selector"
            android:gravity="center"
            android:text="查看影讯"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:visibility="gone" />

    </RelativeLayout>



</RelativeLayout>