<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="182dp">
   <RelativeLayout
       android:id="@+id/mine_item_info_order_view"
       android:layout_width="match_parent"
       android:layout_height="60dp">
       <ImageView
           android:id="@+id/mine_item_info_orders"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_margin="20dp"
           android:src="@mipmap/mine_icon_orders"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="60dp"
           android:layout_toRightOf="@id/mine_item_info_orders"
           android:gravity="center_vertical"
           android:text="我的订单"/>
       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_alignParentRight="true"
           android:layout_margin="20dp"
           android:src="@mipmap/icon_arrow_right"/>
   </RelativeLayout>
    <View
        android:id="@+id/mine_item_info_order_coupon"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/mine_item_info_order_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_d"/>

    <RelativeLayout
        android:id="@+id/mine_item_info_coupon_view"
        android:layout_below="@id/mine_item_info_order_coupon"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/mine_item_info_coupon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:src="@mipmap/mine_icon_coupons"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/mine_item_info_coupon"
            android:gravity="center_vertical"
            android:text="我的优惠劵"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:src="@mipmap/icon_arrow_right"/>
    </RelativeLayout>
    <View
        android:id="@+id/mine_item_info_coupon_points"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/mine_item_info_coupon_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_d"/>
    <RelativeLayout
        android:id="@+id/mine_item_info_points_view"
        android:layout_below="@id/mine_item_info_coupon_points"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/mine_item_info_points"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:src="@mipmap/mine_icon_orders"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/mine_item_info_points"
            android:gravity="center_vertical"
            android:text="我的积分"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:src="@mipmap/icon_arrow_right"/>
    </RelativeLayout>


</RelativeLayout>