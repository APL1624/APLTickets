<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/cinema_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/color_black"
                android:text="耀莱成龙国际影城(王府井店)"/>

            <ImageView
                android:id="@+id/cinema_imax"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_imax_3"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/cinema_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亚运村"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_gray_6"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/cinema_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_gray_6"
                android:layout_marginLeft="10dp"
                android:text="4.0km"/>

        </LinearLayout>

        <TextView
            android:id="@+id/cinema_play_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="今天放映3部影片共5场"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cinema_low_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="￥43.2起"
            android:textSize="20sp"
            android:textColor="@color/colorOrange"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/cinema_seat"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/icon_seat_round"
                android:layout_margin="3dp"/>

            <ImageView
                android:id="@+id/cinema_quan"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/icon_quan_round"
                android:layout_margin="3dp"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

    </LinearLayout>
</LinearLayout>