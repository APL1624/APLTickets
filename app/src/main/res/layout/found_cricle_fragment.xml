    <RelativeLayout
        android:id="@+id/home_found_circle1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color_white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/found_circle_img1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/circle"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/found_circle_title1"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="圈子"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/found_circle_textview1_person"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="人数：1367"
            android:textColor="#999999"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="45dp"/>
        <TextView
            android:id="@+id/found_circle_textview1_posts"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="人数：2328"
            android:textColor="#999999"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/found_circle_textview1_person"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"/>

        <ImageView
            android:layout_width="20dp"
