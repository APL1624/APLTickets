<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="130dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/movie_detail_avatar_logo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/avtors_test"/>
        <TextView
            android:id="@+id/movie_detail_avatar_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="svn就是坑死你"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/movie_detail_avatar_comment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="这个剧照景甜就像是皮上去的"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/color_gray_3"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/movie_detail_avatar_time"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="17天前"
            android:textSize="14sp"
            android:textColor="@color/color_gray_6"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/movie_detail_avatar_share"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_share"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/movie_detail_avatar_like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="赞"
            android:drawableLeft="@mipmap/icon_notlike"
            android:gravity="center"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/movie_detail_avatar_icon_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="评论"
            android:drawableLeft="@mipmap/icon_comment"
            android:gravity="center"
            android:layout_marginRight="10dp"/>

    </LinearLayout>


</LinearLayout>